<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >


	<item>
		<!-- create gradient you want to use with the angle you want to use -->
		<shape android:shape="rectangle" >
			<gradient
				android:angle="45"
				android:startColor="#49B6FF"
				android:centerColor="@color/purple"
				android:endColor="@color/white"
				>
			</gradient>
			<corners android:radius="40dp"/>
		</shape>
	</item>

	<item
		android:bottom="1dp"
		android:left="1dp"
		android:right="1dp"
		android:top="1dp">
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle" >
			<gradient android:angle="90" android:startColor="@color/darkBlue" android:endColor="@color/darkBlue" />
			<corners android:radius="40dp"/>
		</shape>
	</item>



</layer-list>

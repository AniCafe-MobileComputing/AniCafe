<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >


	<item>
		<!-- create gradient you want to use with the angle you want to use -->
		<shape android:shape="rectangle" >
			<gradient
				android:angle="0"
				android:startColor="@color/light_purple"
				android:centerColor="@color/light_blue"
				android:endColor="@color/light_purple"
				>
			</gradient>
			<corners android:radius="40dp"/>
		</shape>
	</item>

	<item
		android:bottom="3dp"
		android:left="3dp"
		android:right="3dp"
		android:top="3dp">
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle" >
			<solid android:color="#95000000" />
			<corners android:radius="40dp"/>
		</shape>
	</item>


	<item
		android:bottom="3dp"
		android:left="3dp"
		android:right="3dp"
		android:top="3dp">
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle" >
			<solid android:color="#95000000" />
			<corners android:radius="40dp"/>
		</shape>
	</item>

</layer-list>

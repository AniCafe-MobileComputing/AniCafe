<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:translationY="14dp"
            android:id="@+id/relative_layout_bottom_bar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center">

            <ImageView
                android:scaleY="0"
                android:scaleX="0"
                android:id="@+id/circle_bottom_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/purple_blue_circle_gradient"/>

            <ImageView
                android:scaleX="1.8"
                android:scaleY="1.8"
                android:id="@+id/icon_bottom_bar"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search_icon"/>

        </RelativeLayout>

        <TextView
            android:scaleY="0"
            android:scaleX="0"
            android:id="@+id/text_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:letterSpacing="-0.04"
            android:textSize="18sp"
            android:fontFamily="@font/nunitosans"
            android:textFontWeight="800"
            android:textColor="@color/gray"
            android:text="Search"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>